
  

// layout
#viewport
  max-width 640px
  min-width 300px 
  box1() 

@media only screen and (max-width:640px)
  #viewport
    margin 0 12px 0


// header 
#header 
  border-bottom 1px solid var-border-color
  padding 0 0 8px
  clearfix()
  h1
    font-size 15px 
    padding 0
    float left 
  #logout
    float right 

// login
#page-login 
#page-regist
#page-regist-complete
#page-mypage
  box1()
  h2
    text-align center
    display block
    padding 2px 10px auto
    margin 0 0 12px
  table 
    width 100%
    th 
      width 30%

//  .regist-link


#friend-list
  box1()
  ul
    // display table-row
    clearfix()
    li
      // display table-cell
      display inline-block
      margin 4px
      padding 8px
      width 25%
     
      border 1px solid var-border-color
      border-radius(4px)
      box-shadow(4px, 4px,5px,rgba(0,0,0,0.4))    
     
      .friend-account 
        display inline-block
      .friend-name
        display inline-block


#page-tweets 
  #tweet-form
    box1()
    ul.tweet-colors
      li
        display inline-block 
        span 
          font-size 16px
  #tweet-list
    box1()
    li 
      border-bottom 1px solid var-border-color
      &:last-child 
        border-bottom none

 
