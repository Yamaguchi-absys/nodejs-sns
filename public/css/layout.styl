
  

// layout
#viewport
  max-width 640px
  min-width 300px 
  box1() 

@media only screen and (max-width:640px)
  #viewport
    margin 0 12px 0


// header 
#header 
  border-bottom 1px solid var-border-color
  padding 0 0 8px
  clearfix()
  h1
    font-size 15px 
    padding 0
    float left 
  #logout
    float right 

// login
#page-login 
#page-regist
#page-regist-complete
#page-mypage
  box1()
  h2
    text-align center
    display block
    padding 2px 10px auto
    margin 0 0 12px
  table 
    width 100%
    th 
      width 30%

//  .regist-link


#page-mypage
  clearfix()
  .user-photo
    float left 
    margin-right 8px


#friend-list
  box1()
  ul
    // display table-row
    clearfix()
    li
      // display table-cell
      display inline-block
      margin 4px
      padding 8px
      width 124px
     
      border 1px solid var-border-color
      border-radius(4px)
      box-shadow(4px, 4px,5px,rgba(0,0,0,0.4))    
     
      .friend-account 
      .friend-name
      .friend-status
        display inline-block

#page-tweets 
  #tweet-form
    box1()
    ul.tweet-colors
      li
        display inline-block 
        span 
          font-size 16px
  #tweet-list
    box1()
    li
      clearfix() 
      border-bottom 1px solid var-border-color
      &:last-child 
        border-bottom none
      .user-photo
        float left
        margin-left 8px 
        height auto
        border none 
      .tweet-time
        text-align right 
        font-size 10px
        color #999

// .friend-photo
.user-photo
    display inline-block
    width 100px
    height 100px
    border 1px solid #bbb
    padding 10px
    img 
      max-width 100px
      max-height 100px
      width auto
      height auto 
 
